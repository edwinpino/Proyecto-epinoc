{
  "name": "jdbc_sink_invoices_topic",
  "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
  "tasks.max": "1",
  "topics": "invoices_topic",
  "connection.url": "jdbc:postgresql://postgres:5432/demo",
  "connection.user": "demo",
  "connection.password": "demo",
  "auto.create": "true",
  "auto.evolve": "true",
  "insert.mode": "upsert",
  "pk.mode": "record_value",
  "pk.fields": "invoice_id",
  "value.converter": "org.apache.kafka.connect.json.JsonConverter",
  "value.converter.schemas.enable": "true",
  "key.converter": "org.apache.kafka.connect.storage.StringConverter",
  "errors.tolerance": "all",
  "errors.log.enable": "true",
  "errors.log.include.messages": "true",
  "errors.deadletterqueue.topic.name": "dlq.invoices_topic",
  "errors.deadletterqueue.context.headers.enable": "true",
  "errors.deadletterqueue.topic.replication.factor": "3",
  "table.name.format": "invoice"
}

